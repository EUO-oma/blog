rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOwner() {
      return request.auth != null && request.auth.token.email == 'icandoit13579@gmail.com';
    }

    function isCalendarSyncBot() {
      return request.auth != null && request.auth.token.email == 'abundant255@naver.com';
    }

    // posts 컬렉션: 공개 read, owner만 write
    match /posts/{postId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }

    // schedules 컬렉션: 공개 read, owner만 write
    match /schedules/{scheduleId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }

    // youtube 컬렉션: 공개 read, owner만 write
    match /youtube/{videoId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }

    // notices 컬렉션: 공개 read, owner만 write
    match /notices/{noticeId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }

    // phonebook 컬렉션: 공개 read, 로그인 사용자 본인 데이터만 write 허용
    match /phonebook/{itemId} {
      allow read: if true;
      allow create: if request.auth != null
        && request.resource.data.authorEmail == request.auth.token.email;

      allow update, delete: if request.auth != null
        && resource.data.authorEmail == request.auth.token.email;
    }

    // Google Calendar 동기화 캐시: 공개 read, owner + sync bot write 허용
    match /calendar_today_cache/{docId} {
      allow read: if true;
      allow create, update, delete: if isOwner() || isCalendarSyncBot();
    }

    // favorites 컬렉션: 공개 read, owner만 write 허용
    match /favorites/{favoriteId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }

    // todos 컬렉션: 공개 read, 로그인 사용자 본인 데이터만 write 허용
    match /todos/{todoId} {
      allow read: if true;
      allow create: if request.auth != null
        && request.resource.data.authorEmail == request.auth.token.email;

      allow update, delete: if request.auth != null
        && resource.data.authorEmail == request.auth.token.email;
    }

    // words 컬렉션: 공개 read, 로그인 사용자 본인 데이터만 write 허용
    match /words/{wordId} {
      allow read: if true;
      allow create: if request.auth != null
        && request.resource.data.authorEmail == request.auth.token.email;

      allow update, delete: if request.auth != null
        && resource.data.authorEmail == request.auth.token.email;
    }

    // images 컬렉션: 공개 read, owner만 write 허용
    match /images/{imageId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }

    // music 컬렉션: 공개 read, owner만 write 허용
    match /music/{musicId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }

    // files 컬렉션: 공개 read, owner만 write 허용
    match /files/{fileId} {
      allow read: if true;
      allow create, update, delete: if isOwner();
    }

    // 비밀 단어장: owner만 read/write 허용
    match /secret_words/{wordId} {
      allow read, create, update, delete: if isOwner();
    }

    // 명시되지 않은 기타 컬렉션은 차단
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
