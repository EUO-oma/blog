rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isOwner() {
      return request.auth != null && request.auth.token.email == 'icandoit13579@gmail.com';
    }

    // 모든 문서 read 허용(공개 블로그)
    match /{document=**} {
      allow read: if true;
    }

    // posts 컬렉션: owner만 write 허용
    match /posts/{postId} {
      allow create, update, delete: if isOwner();
    }

    // schedules 컬렉션: owner만 write 허용
    match /schedules/{scheduleId} {
      allow create, update, delete: if isOwner();
    }

    // youtube 컬렉션: owner만 write 허용
    match /youtube/{videoId} {
      allow create, update, delete: if isOwner();
    }

    // notices 컬렉션: owner만 write 허용
    match /notices/{noticeId} {
      allow create, update, delete: if isOwner();
    }

    // phonebook 컬렉션: 로그인 사용자 본인 데이터만 write 허용
    match /phonebook/{itemId} {
      allow create: if request.auth != null
        && request.resource.data.authorEmail == request.auth.token.email;

      allow update, delete: if request.auth != null
        && resource.data.authorEmail == request.auth.token.email;
    }
  }
}